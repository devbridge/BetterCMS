@using BetterCms.Core.DataContracts.Enums
@using BetterCms.Module.Root.Content.Resources

@model string
@if (Model == ContentStatus.Published.ToString())
{
    <div class="bcms-action-ok" title="@RootGlobalization.WidgetStatus_Published">@RootGlobalization.WidgetStatus_Published</div>
}
else if (Model == ContentStatus.Draft.ToString())
{
    <div class="bcms-action-warn" title="@RootGlobalization.WidgetStatus_Draft">@RootGlobalization.WidgetStatus_Draft</div>
}
else
{
    <div class="bcms-action-draft" title="@RootGlobalization.WidgetStatus_PublishedWithDraft">@RootGlobalization.WidgetStatus_PublishedWithDraft</div>
}