<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="/file/bcms-users/Content/Styles/bcms.users.min.css" />

    @RenderSection("Head", false)
</head>

<body>
    <div class="bcms-modal bcms-modal-installation" spellcheck="true">
        <div class="bcms-modal-body">
            <div class="bcms-modal-header">
                <div class="bcms-modal-frame-holder">
                    <div class="bcms-modal-title">@ViewBag.Title</div>
                </div>
            </div>

            <div class="bcms-modal-content">
                <div class="bcms-window-installation">
                    @RenderBody()
                </div>
            </div>

            <div class="bcms-modal-footer"></div>
        </div>
    </div>
</body>
</html>
