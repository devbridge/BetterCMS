@using BetterCms.Module.MediaManager.Content.Resources
@using BetterCms.Module.Root.Mvc.Helpers
@model BetterCms.Module.MediaManager.ViewModels.MediaManager.MediaManagerIndexViewModel

<div class="bcms-inner-navigation">
    <div class="bcms-inner-navigation-ui bcms-tab-item bcms-active" data-name="#bcms-tab-1" id="bcms-tab-images">@MediaGlobalization.ImagesTab_Title</div>
    <div class="bcms-inner-navigation-ui bcms-tab-item" data-name="#bcms-tab-2" id="bcms-tab-files">@MediaGlobalization.FilesTab_Title</div>
</div>

@Html.MessagesBox()

<div id="bcms-tab-1" class="bcms-tab-single">
    @Html.Partial("Partial/MediaManagerTab")
</div>

<div id="bcms-tab-2" class="bcms-tab-single">
    @* Added inner div, because sometimes there is a need for showing custom messages *@
    <div>
        @if (Model.CustomFilesMessages != null)
        {
            @Html.CustomMessagesBox(Model.CustomFilesMessages, "bcms-media-manager-messages")
        }
        @Html.Partial("Partial/MediaManagerTab")
    </div>
</div>

@Html.Partial("Partial/MediaManagerWindowTemplate")
